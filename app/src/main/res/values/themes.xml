<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Darb" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tomatoes_200</item>
        <item name="colorSecondaryVariant">@color/tomatoes_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="imageButtonStyle">@style/imageBtn</item>
    </style>
<!-- TOOOL BAR TITLE TEXT FORMAT -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">45sp</item>
        <item name="fontWeight">1700</item>
    </style>
    <style name="Toolbar.TitleText1" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">32sp</item>
        <item name="fontWeight">1700</item>
    </style>
    <!-- Dashboard application theme. -->
    <style name="Theme.Darb.dash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tomatoes_200</item>
        <item name="colorSecondaryVariant">@color/tomatoes_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="imageButtonStyle">@style/imageBtn</item>
    </style>
    <style name="imageBtn" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="background">@drawable/image_btn</item>
    </style>

    <style name="textViewDesc" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="textFillColor">@color/white</item>
        <item name="riv_border_color">@color/white</item>
    </style>

</resources>